snippet svar "Adds a string variable"
variable "$1" {
  type = string
  default = ${2:"text"}
}

endsnippet

snippet bvar "Adds a boolean variable"
variable "$1" {
  type = bool
  default = ${2:"text"}
}

endsnippet

snippet val "Value boilerplate"
"${var.$1}"
endsnippet

snippet lvar "Adds a list variable"
variable "$1" {
  type = list
  default = [$2]
}

endsnippet

snippet mvar "Adds a map variable"
variable "$1" {
  type = map(string)
  default = {
    $2 = ${3:"text"}
  }
}

endsnippet
